<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="available_financing_plans_ids" invisible="1"/>
                <field name="financing_plan_id" domain="[('id', 'in', available_financing_plans_ids)]" attrs="{'invisible':['|', ('available_financing_plans_ids', '=', []), ('payment_type', '!=', 'inbound')], 'required': [('available_financing_plans_ids', '!=', []), ('payment_type', '=', 'inbound')]}"/>
            </field>
            <div name="amount_div" position="after">
                <field name="surcharged_amount" attrs="{'invisible':['|', ('available_financing_plans_ids', '=', []), ('payment_type', '!=', 'inbound')]}"/>
            </div>
        </field>
    </record>

</odoo>
